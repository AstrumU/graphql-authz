{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "packages",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "lib": [
      "es2017",
      "es2019.array"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "compileOnSave": false,
  "references": [
    {
      "path": "packages/core"
    },
    {
      "path": "packages/directive"
    },
    {
      "path": "packages/plugins/apollo-server"
    },
    {
      "path": "packages/plugins/apollo-server-v2"
    },
    {
      "path": "packages/plugins/envelop"
    }
  ],
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}