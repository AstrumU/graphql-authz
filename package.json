{
  "name": "graphql-authz-monorepo",
  "private": true,
  "description": "GraphQL authorization layer",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "run-s clean:*",
    "clean:packages": "rimraf packages/{,plugins}/*/{dist,node_modules,tsconfig.tsbuildinfo}",
    "clean:root": "rimraf {node_modules,coverage,tsconfig.tsbuildinfo}",
    "build": "tsc --build tsconfig.json",
    "test": "yarn jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check packages/*/src/**/*.ts packages/plugins/*/src/**/*.ts __tests__",
    "prettier:fix": "prettier --write packages/*/src/**/*.ts packages/plugins/*/src/**/*.ts __tests__",
    "prerelease": "yarn build",
    "release": "changeset publish"
  },
  "author": "Dmitry Til <till.dima@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AstrumU/graphql-authz.git"
  },
  "keywords": [
    "typescript",
    "graphql",
    "schema",
    "directives",
    "authorization",
    "authz",
    "apollo"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@envelop/types": "^1.0.2",
    "@graphql-tools/schema": "^8.1.2",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "apollo-server": "^2.25.2",
    "apollo-server-plugin-base": "^0.9.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "graphql": "^15.5.1",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "graphql": "^14.0.0 || ^15.0.0"
  },
  "workspaces": [
    "./packages/*",
    "./packages/plugins/*",
    "./examples"
  ]
}
