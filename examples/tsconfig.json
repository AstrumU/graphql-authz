{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "lib": [
      "es2017",
      "es2019.array"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "compileOnSave": false,
  "references": [
    {
      "path": "packages/apollo-federation"
    },
    {
      "path": "packages/apollo-server-code-first"
    },
    {
      "path": "packages/apollo-server-schema-first"
    },
    {
      "path": "packages/envelop"
    },
    {
      "path": "packages/express-graphql"
    },
    {
      "path": "packages/graphql-helix"
    },
    {
      "path": "packages/nestjs"
    },
    {
      "path": "packages/schema-stitching"
    },
    {
      "path": "packages/type-graphql"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}